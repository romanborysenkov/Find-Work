@page
@model FindWorkRazor.Pages.SignUpModel
@{     ViewData["Title"] = "Sign up";

}

<h1>Sign up</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">

            <div asp-validation-summary="All" class="text-danger">

                <div class=" mb-3">
                    <input asp-for="Model.firstname" class="form-control" placeholder="First Name" />
                    <span asp-validation-for="Model.firstname" class="text-danger"></span>
                </div>
                <div class=" mb-3">
                    <input asp-for="Model.secondname" class="form-control" placeholder="Second Name" />
                    <span asp-validation-for="Model.secondname" class="text-danger"></span>
                </div>
                <div class="input-group mb-3">
                    <input asp-for="Model.email" class="form-control" placeholder="Email" />
                </div>
                <div class="mb-3">
                    <input type="password" asp-for="Model.salt" class="form-control" placeholder="Password" />
                </div>
                <div class="mb-3">
                    <input type="password" asp-for="Model.saltedhashedpassword" class="form-control" placeholder="Confirm password" />
                </div>

                <div class="mb-3">
                    <input asp-for="Model.workerphone" class="form-control" placeholder="Phone number " />
                </div>
                <div class="mb-3">
                    <input type="date" asp-for="Model.age" class="form-control" placeholder="Birthday day "/>
                </div>

                <div class="form-group ">
                    <button type="submit" class="btn btn-light">Register</button>
                </div>
            </div>

        </form>
    </div>
</div>
